<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/v_pager_img"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/v_pager_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/v_pager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/v_pager_rate"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/v_pager_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_pager_rate"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:lines="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/v_pager_address"
            android:layout_width="match_parent"
            android:layout_height="24dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/v_pager_heart"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_favorite_black_24dp"/>

            <TextView
                android:id="@+id/v_pager_like"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="0"
                android:gravity="bottom"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>