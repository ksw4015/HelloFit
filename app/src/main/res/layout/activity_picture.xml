<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Iv_picture_profile"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/Tx_picture_nick"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/Iv_picture_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Iv_picture_profile"
        android:id="@+id/Iv_picture"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/Iv_picture"
        android:id="@+id/Tx_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하 세상 ㅅㅂ 좆같네..."
        android:textSize="14dp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>